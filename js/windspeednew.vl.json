{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/gdel0004/FIT3179/main/windspeed.csv",
    "format": {"parse": {"Date": "utc:'%d/%m/%Y'"}}
  },
  "params": [
    {
      "name": "Year_above",
      "value": 2009,
      "bind": {
        "input": "range",
        "min": 2009,
        "max": 2017,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {"calculate": "year(datum.Date)==Year_above", "as": "isSelected"},
    {"calculate": "year(datum.Date)", "as": "Year"},
    {"calculate": "month(datum.Date)", "as": "Month"},
    {"filter": "datum.Year <= Year_above"}
  ],
  "width": "container",
  "height": 400,
  "resolve": {
    "scale": {
      "x": "independent",
      "color": "independent",
      "strokeDash": "independent"
    }
  },
  "layer": [
    {
      "mark": {"type": "line", "strokeDash": [8, 8], "strokeWidth": 3},
      "transform": [
        {"filter": "datum.Year > 2008"},
        {
          "aggregate": [
            {"op": "mean", "field": "WindSpeed", "as": "AvgWindSpeed"}
          ],
          "groupby": ["Month"]
        }
      ],
      "encoding": {
        "x": {"field": "Month", "type": "temporal", "axis": null},
        "color": {"value": "rgb(156, 179, 213)"},
        "y": {
          "field": "AvgWindSpeed",
          "title": "Average Wind Speed (km/h)",
          "type": "quantitative",
          "scale": {"domain": [10, 18]},
          "axis": {"tickMinStep": 1}
        }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Month",
          "timeUnit": "month"
        },
        "color": {
          "field": "isSelected",
          "legend": null,
          "scale": {"range": ["lightgrey", "purple"]}
        },
        "size": {"field": "Year", "legend": null, "scale": {"range": [2, 4]}},
        "y": {
          "field": "WindSpeed",
          "title": "Average Wind Speed (km/h)",
          "type": "quantitative",
          "scale": {"domain": [10, 18]},
          "axis": {"tickMinStep": 1},
          "aggregate": "mean"
        },
        "tooltip": [
          {
            "field": "WindSpeed",
            "title": "Average Wind Speed",
            "type": "quantitative",
            "aggregate": "mean",
            "format": ".2f"
          },
          {
            "field": "Date",
            "type": "temporal",
            "title": "Month",
            "timeUnit": "yearmonth",
            "format": "%B, %Y"
          }
        ]
      }
    },
    {
      "transform": [{"filter": "month(datum.Date) == 0"}],
      "mark": {
        "type": "text",
        "dy": -10,
        "dx": 10,
        "fontSize": 15,
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"value": 20},
        "y": {"aggregate": "mean", "field": "WindSpeed"},
        "text": {"field": "Year", "type": "nominal"},
        "opacity": {
          "field": "isSelected",
          "legend": null,
          "scale": {"range": [0, 1], "domain": [false, true]}
        },
        "color": {"value": "purple"}
      }
    },
    {
      "mark": "line",
      "data": {
        "values": [
          {"categ": "Previous Years", "c": "lightgrey"},
          {"categ": "Current Year", "c": "purple"},
          {"categ": "Running Average", "c": "rgb(156, 179, 213)"}
        ]
      },
      "encoding": {
        "color": {
          "field": "categ",
          "type": "nominal",
          "scale": {"range": {"field": "c"}},
          "legend": {"title": "", "orient": "bottom-right"}
        },
        "strokeDash": {
          "field": "categ",
          "type": "nominal",
          "scale": {"range": [10, 10, 2]}
        }
      }
    }
  ],
  "config": {"font": "Century Gothic"}
}
