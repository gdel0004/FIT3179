              "scale": {"type": "sqrt", "domain": [0, 0.3], "range": [0, 120]}
            },
            "color": {
              "field": "Percent",
              "title": "Proportion of days with wind direction",
              "type": "quantitative",
              "scale": {"scheme": "bluepurple", "reverse": false}
